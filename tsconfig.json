{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./dist",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
    "include": [
      "./**/*"
  ],
  "exclude": [
      "dist",
      "**/*.spec.ts"
  ]
}